<h1>Login</h1>

<%= form_tag login_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag 'Log in' %>
<% end %>
<p>New user? <%= link_to "Sign up now", new_user_path %></p>
